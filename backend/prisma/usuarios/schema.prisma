generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/usuarios-client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./usuarios.db"
}

// adicionar loja, talvez um enum com tayrona, dryclean, (não lembro o nome) e (não lembro o nome)
// devido essa fator ausente seria bom ser numeros e somente no front eu pensar nisso 
model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  funcoes  UsuarioFuncao[]
  login    String   @unique
  senha    String
  ativo    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model UsuarioFuncao {
  id       Int      @id @default(autoincrement())
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  funcao   Funcao
}

enum Funcao { // só existe a diferenciação de funcionario e gestor
  CADASTRO
  COMPRAS
  RECEBIMENTO
  FUNCIONARIO
  EMPREGADA
  GESTOR
}
