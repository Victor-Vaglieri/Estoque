generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/usuarios-client"
}

datasource db {
  provider = "postgresql"
  // url      = "file:./usuarios.db"
  url = env("DATABASE_URL_USUARIOS")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  login     String   @unique
  senha     String
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  lojaId    Int?
  funcoes   UsuarioFuncao[]
}

model UsuarioFuncao {
  id        Int      @id @default(autoincrement())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade) // Adicionado onDelete
  usuarioId Int
  funcao    Funcao
}

enum Funcao {
  TERCEIROS
  SAIDA
  RECEBIMENTO
  INVENTARIO
  AVISOS
  CADASTRO
  LISTA
  GESTOR
}