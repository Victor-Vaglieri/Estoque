generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/usuarios-client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./usuarios.db"
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  funcoes  UsuarioFuncao[]
  login    String   @unique
  senha    String
  ativo    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model UsuarioFuncao {
  id       Int      @id @default(autoincrement())
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  funcao   Funcao
}

enum Funcao {
  CADASTRO     // Respons치vel A
  COMPRAS      // Respons치vel B
  RECEBIMENTO  // Respons치vel C
  FUNCIONARIO  // Respons치vel D
  EMPREGADA
  GESTOR
}
