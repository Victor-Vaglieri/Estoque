generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/usuarios-client"
}

datasource db {
  // provider = "sqlite"
  // url      = "file:./usuarios.db"
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["usuarios"]
}

model Usuario {
  id        Int             @id @default(autoincrement())
  nome      String
  funcoes   UsuarioFuncao[]
  login     String          @unique
  senha     String
  ativo     Boolean         @default(true)
  createdAt DateTime        @default(now())

  @@schema("usuarios")
}

model UsuarioFuncao {
  id        Int     @id @default(autoincrement())
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  funcao    Funcao

  @@schema("usuarios")
}

enum Funcao {
  CADASTRO // Respons치vel A
  COMPRAS // Respons치vel B
  RECEBIMENTO // Respons치vel C
  FUNCIONARIO // Respons치vel D
  EMPREGADA
  GESTOR

  @@schema("usuarios")
}
