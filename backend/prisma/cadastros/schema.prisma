generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/cadastros-client"
}

datasource db {
  provider = "postgresql"
  // url      = "file:./cadastros.db"
url     = env("DATABASE_URL_CADASTROS")
}

model Cadastro {
  id       Int      @id @default(autoincrement())
  nome     String
  login    String   @unique
  senha    String
  responsavelId  Int?
  createdAt DateTime @default(now())
  ativo Boolean @default(true)
}
